<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="lpa.aumont.cercadom.MainActivity2$PlaceholderFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/purple_A200"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/catQuiz"
                style="@style/MainActivityImageTheme"
                android:src="@drawable/ic_cat"
                android:layout_width="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/blue_500"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fishQuiz"
                style="@style/MainActivityImageTheme"
                android:contentDescription="Fish Icon"
                android:src="@drawable/ic_fish"
                android:layout_width="match_parent" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/blue_500"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/birdQuiz"
                style="@style/MainActivityImageTheme"
                android:src="@drawable/ic_bird"
                android:layout_width="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/purple_A200"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/dogQuiz"
                style="@style/MainActivityImageTheme"
                android:src="@drawable/ic_dog"
                android:layout_width="match_parent" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>